@model CreateLocationVM
<html>
<head>
    <link rel="stylesheet" href="~/css/Index.css" />

</head>
<body>
<form asp-controller="Location" asp-action="AddLocation" method="post" class="form">
    <div class="md-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="md-3">
        <label asp-for="Address" class="form-label">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="md-3">
        <label asp-for="OpensAt" class="form-label">Opens At</label>
        <input asp-for="OpensAt" class="form-control" />
    </div>
    <div class="md-3">
        <label asp-for="ClosesAt" class="form-label">Closes At</label>
        <input asp-for="ClosesAt" class="form-control" />
    </div>

    <button type="submit" class="mt-3 btn btn-primary">Create New Location</button>
</form>

</body>
</html>