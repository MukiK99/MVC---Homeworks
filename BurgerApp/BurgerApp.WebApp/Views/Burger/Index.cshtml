@model IEnumerable<BurgerDto>

<!DOCTYPE HTML>
<html>
<head>
    <title>Burgers Menu</title>
    <link rel="stylesheet" href="~/css/Index.css" />

</head>
<body>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered mt-2">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Vegetarian Product</th>
                        <th>Vegan Product</th>
                        <th>French Fries</th>
                        <th class="w-25">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var burger in Model)
                    {
                        <tr class="text-center">
                            <td>@burger.Name</td>
                            <td>@burger.Price $</td>
                            <td>@(burger.IsVegetarian ? "✔" : "✖")</td>
                            <td>@(burger.IsVegan ? "✔" : "✖")</td>
                            <td>@(burger.HasFries ? "✔" : "✖")</td>
                            <td>
                                <form asp-controller="Burger" asp-action="Remove" method="post" style="display: inline;">
                                    <button type="submit" class="btn btn-small btn-danger" name="id" value="@burger.Id">Remove</button>
                                </form>
                                <a asp-controller="Burger" asp-action="EditBurger" asp-route-id="@burger.Id" class="btn btn-small btn-warning">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-action="AddBurger" class="btn btn-lg btn-primary mt-2">Create Burger</a>
        </div>
    </div>
</body>


</html>
