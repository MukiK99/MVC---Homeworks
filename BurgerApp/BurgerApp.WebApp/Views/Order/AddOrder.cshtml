@model CreateOrderVM
<html>
<head>
    <link rel="stylesheet" href="~/css/Index.css" />

</head>
<body>
<form asp-controller="Order" asp-action="AddOrder" method="post" class="form">
    <div class="md-3">
        <label asp-for="FullName" class="form-label">Full Name</label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="md-3">
        <label asp-for="Address" class="form-label">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="md-3">
        <label asp-for="LocationId" class="form-label">Location</label>
        <select asp-for="LocationId" class="form-control">
            <option value="">Select a location</option>
            @foreach (var location in ViewBag.Locations as List<SelectListItem>)
            {
                <option value="@location.Value">@location.Text</option>
            }
        </select>
    </div>
    <div class="md-3">
        <h4 action="m-3">Burgers</h4>
        @for (int i = 0; i < (ViewBag.Burgers as List<BurgerOrderVM>).Count; i++)
        {
            var burgerOrder = (ViewBag.Burgers as List<BurgerOrderVM>)[i];
            <div class="md-3">
                <label class="form-label" name="BurgerOrders[@i].BurgerName">@burgerOrder.BurgerName</label>
                <input type="hidden" name="BurgerOrders[@i].BurgerName" value="@burgerOrder.BurgerName" />
                <input type="hidden" name="BurgerOrders[@i].BurgerId" value="@burgerOrder.BurgerId" />
                <input type="number" name="BurgerOrders[@i].Quantity" class="form-control" value="0" min="0" />
            </div>
        }
        
    </div>
    <button type="submit" class="mt-3 btn btn-primary">Create New Order</button>
</form>
</body>
</html>
      